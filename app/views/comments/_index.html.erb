<div id='comment-container' class='container row'>
  <% @comments.each do |comment| %>
    <div id='comments-list' class='col-md-8 justify-content-md-center'>
      <span>
        <b>Comment from IP: </b>
      <span> 
      	<%= comment.ip_address%> <b>at</b> <%= comment.created_at.to_s(:db)%>
      </span>
      </span>
    </div >
    <div class='col-xs-12 col-md-8 '>
    	<ul>
    		<%= sanitize(comment.notes, tags: %w(b i)).html_safe %>
    	</ul> 
    </div>
    <br/>
  <% end %>
</div>
